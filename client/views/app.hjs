<script src="/socket.io/socket.io.js"></script>
<script>
  var socket = io();
  console.log(socket);
  socket.on('server_status', function(msg){
    var dfs_entry = JSON.parse(msg);
    if(dfs_entry.status){
      $( "#" + dfs_entry.entry ).addClass( "up" );
      $( "#" + dfs_entry.entry ).removeClass( "down" );
    } else{
      $( "#" + dfs_entry.entry ).removeClass( "up" );
      $( "#" + dfs_entry.entry ).addClass( "down" );
    }
  });
  
</script>

